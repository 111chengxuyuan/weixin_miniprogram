/* pages/comment/comment.wxss */
.container{
  height:100vh;/*高100的视窗，这里写100%是无效的*/
  flex-wrap: nonwarp;  /*换行*/
  display:flex;/*flex布局方法 */
  flex-direction: column;/*垂直布局*/
  align-items: left;/*水平方向居中 */
  justify-content: space-around;
  background-color: rgba(50, 194, 194, 0.247); 
}
.score{
  display:flex;/*flex布局方法 */
  flex-direction: row;/*水平布局*/
  align-items: center;
  background-color: rgb(44, 181, 185);
}
.comment{
  height: 300rpx;
  width: 700rpx;
  max-lines: 5;
  border:1rpx solid rgb(44, 181, 185);
}
.submit{
  background-color:  rgb(44, 181, 185);
}
.score1{
  background-color:rgba(159, 185, 44, 0.555); 
}
.score2{
  background-color:rgba(44, 100, 185, 0.644); 
}